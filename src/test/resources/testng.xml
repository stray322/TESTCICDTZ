<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SDET Practicum 2025 - Form Automation" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Positive Form Tests" preserve-order="true">
        <parameter name="headless" value="false"/>

        <classes>
            <class name="com.simbirsoft.practicum.tests.FormTest">
                <methods>
                    <include name="completeFormSubmissionTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Negative Form Tests" preserve-order="true">
        <parameter name="headless" value="true"/>

        <classes>
            <class name="com.simbirsoft.practicum.tests.FormTest">
                <methods>
                    <include name="emptyFormSubmissionTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
